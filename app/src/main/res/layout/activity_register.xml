<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="hideKeyboard"></FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="40dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:text="Registrieren"
            android:textColor="#0F0F0F"
            android:textSize="32dp"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Bitte fÃ¼llen Sie alle Felder aus"
            android:textAlignment="center"
            android:textColor="#3A3A3A"
            android:textSize="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

        <EditText
            android:id="@+id/reg_Benutzername"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="42dp"
            android:background="@drawable/bg_editext"
            android:inputType="text"
            android:hint="Benutzername"
            android:paddingLeft="16dp"
           />

        <EditText
            android:id="@+id/reg_Passwort"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_editext"
            android:inputType="textPassword"
            android:hint="Passwort"
            android:textSize="16dp"
            android:paddingLeft="16dp"/>

        <Button
            android:id="@+id/reg_Register"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_btn"
            android:text="Jetzt registrieren"
            android:textColor="#0F0F0F"
            android:textSize="16dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="28dp"
            android:orientation="horizontal"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_book"
                android:text="Sie sind bereits registriert ?"
                android:textColor="#0F0F0F"
                />

            <Button
                android:id="@+id/reg_Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/bg_btn"
                android:text="Login"
                android:textColor="#0F0F0F"
                android:textSize="12dp"

               />



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>