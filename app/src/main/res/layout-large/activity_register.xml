<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="hideKeyboard">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="40dp">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:text="Registrieren"
            android:textColor="#0F0F0F"
            android:textSize="64dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="Bitte füllen Sie alle Felder aus"
            android:textAlignment="center"
            android:textColor="#3A3A3A"
            android:textSize="28dp"
            android:paddingLeft="16dp"/>

        <EditText
            android:id="@+id/reg_Benutzername"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_editext"
            android:inputType="text"
            android:hint="Benutzername"
            android:paddingLeft="32dp" />

        <EditText
            android:id="@+id/reg_Passwort"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_editext"
            android:inputType="textPassword"
            android:hint="Passwort"
            android:paddingLeft="32dp" />

        <Button
            android:id="@+id/reg_Register"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_btn"
            android:text="Jetzt registrieren"
            android:textColor="#0F0F0F"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_book"
                android:text="Sie sind bereits registriert ?"
                android:textColor="#0F0F0F"
                android:textSize="24dp"
                android:layout_marginLeft="320dp"
                />

            <!-- Das wäre nur ein Text, kein Button
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Login"
                android:textColor="#0F0F0F"
                android:textSize="16dp" />
             -->

            <Button
                android:id="@+id/reg_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:background="@drawable/bg_btn"
                android:text="Login"
                android:textColor="#0F0F0F"
                android:textSize="32dp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>